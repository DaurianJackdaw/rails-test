<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h3>Reply:</h3>
<ul>
	<% @post.replies.each do |reply| %>
	<li><%= reply.body %></li>
	<% end -%>
</ul>

<%= form_for Reply.new, url: reply_post_path do |form| %>
	<%= f.text_area :body %>
	<%= f.submit %>
<% end -%>
